<UserControl x:Class="Tida.Canvas.Shell.ComponentModel.Views.Line2DEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tida.Canvas.Shell.ComponentModel.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <GroupBox Header="{DynamicResource InputInstruction_Line2DStart}">
            <local:Vector2DEditor x:Name="startVectorEditor" Vector2DChanged="VectorEditor_Vector2DChanged"/>
        </GroupBox>
        <GroupBox Margin="0,6,0,0" Header="{DynamicResource InputInstruction_Line2DEnd}">
            <local:Vector2DEditor x:Name="endVectorEditor" Vector2DChanged="VectorEditor_Vector2DChanged"/>
        </GroupBox>
    </StackPanel>
        
</UserControl>

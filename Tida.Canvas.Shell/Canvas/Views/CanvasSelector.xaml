<UserControl x:Class="Tida.Canvas.Shell.Canvas.Views.CanvasSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tida.Canvas.Shell.Canvas.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="6,6">
        <CheckBox IsChecked="{Binding IsMultiSelectEnable}" Content="{DynamicResource InputInstruction_MultiSelect}" VerticalAlignment="Center"/>
        <Button Command="{Binding ConfirmCommand}" Content="{DynamicResource MsgBtnText_OK}" Margin="12,0"/>
        <Button Command="{Binding CancelCommand}" Content="{DynamicResource MsgBtnText_Cancel}"  />
    </StackPanel>
</UserControl>

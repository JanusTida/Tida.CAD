<Window x:Class="Tida.Canvas.Shell.Splash.Views.Splash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:prism="http://prismlibrary.com/"
         WindowStartupLocation="CenterScreen" WindowStyle="None" ShowInTaskbar="False"
        Width="560" Height="360" 
        prism:ViewModelLocator.AutoWireViewModel="True"
        Background="Transparent" 
        mc:Ignorable="d" MouseLeftButtonDown="Window_MouseLeftButtonDown"
        Title="SplashScreen">
    
    <Grid Background="White">
        <Image Source="/Tida.Canvas.Shell;component/Splash/Images/CDO.jpg" />
        <TextBlock Margin="0,0,0,36" FontSize="14" Foreground="#0066CC" Text="{Binding LoadingText,FallbackValue=模块正在加载:3131.dll}" VerticalAlignment="Bottom" TextAlignment="Center"/>
    </Grid>
</Window>
